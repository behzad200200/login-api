/* app css stylesheet */

.menu {
    list-style: none;
    border-bottom: 0.1em solid black;
    margin-bottom: 2em;
    padding: 0 0 0.5em;
}
.footer{
    background-color: #040F22;
    bottom: 0;
    height: 60px;
    position: absolute;
    width: 100%;
}

.container.login{
    background-color: #000066;
    height: 100%
}
.header{
    height: 60px;
    position: absolute;
    top: 0;
    width: 100%;
}
html, body {
    height: 100%;
}
.navbar{
    height: 50px;
}
#wrap {
    height: auto !important;
    margin: 0 auto -60px;
    min-height: 100%;
}
#push, #footer {
    height: 60px;
}
#footer {
    background-color: #f5f5f5;
}
.background-page{
    padding: 20px;
    height: 100%;
    width: 100%;
}
.view-container{
    height: 100%;
    width: 100%;
    padding: 20px;
    overflow: auto;
}
.login{
    background-color: #204d74;
    height: 100%;
    width: 100%;
}
.sign-in{
    background-color: #004444;
    height: 100%;
    width: 100%;
}
.vcenter {
     vertical-align: middle;
 }
.full-page{
    padding-bottom: 60px;
    padding-top: 40px;
    min-height: 100%;
    height: 100%;
    width: 100%;
    min-width: 100%;
    position: absolute;
}
.container .credit {
    margin: 20px 0;
}
code {
    font-size: 80%;
}

.footer a{
    color: #ffffff;
}

.footer p{
    color: #ffffff;
}

.center-text{
    text-align: center;
}
.inner {
    width: 50%;
    margin: 0 auto;
}


.menu:before {
    content: "[";
}

.menu:after {
    content: "]";
}

.menu > li {
    display: inline;
}

.menu > li:before {
    content: "|";
    padding-right: 0.3em;
}

.menu > li:nth-child(1):before {
    content: "";
    padding: 0;
}
.login-block{
    background-color: #F4F4F4;
    padding: 20px 20px 20px 20px;
}
.edit-profile{
    background-color: #F4F4F4;
}
.navbar-default{
    background-color: #0D4E7F ;
}
.image-container{
    height:100%;
    width:100%;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}
.new-contractor-backgournd {
    background-image: url(<%= asset_data_uri('new_contractor_header.png') %>);
}
.ss{

}
.avalibility-lable-background{
    background-image: url(<%= asset_data_uri('availability.png') %>);
}
.new-contractor-header{
    height: 30px;
    margin-bottom: 20px;
}